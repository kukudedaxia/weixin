/* compoent/size/size.wxss */
.mask{
 position: fixed;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 display: flex;
 background-color: rgba(0,0,0,0.4);
 z-index: 10;
}
.warp {
background:#f4f4f7;
width:100%;
height:66%;
bottom:100rpx;
position:absolute;
z-index: 99;
}
.head {
  display: flex;
  flex-direction: 'row';
  align-items: center;
  height: 180rpx;
  padding: 0 4%;
  background: #fff;
  position:absolute;
width:100%;
top:0;
z-index: 100;
}
.head image {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #f4f4f7;
  margin-right: 40rpx;
}
.head-price {
  font-size: 40rpx;
  font-weight: bolder;
  margin-bottom:10rpx;
}
.head-size {
  color: #6d717e;
  font-size: 28rpx;
}
.content {
  display:flex;
flex-direction:'row';
flex-wrap:wrap;
padding-bottom: 50rpx;
}

.item {
  background: #fff;
  width: 20%;
  margin-left: 4%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.active {
  background: #01c2c3;
  color: #fff;
}
.size {
  font-weight: 500;
}
.price {
  color: #6d717e;
  font-size: 26rpx
}

@keyframes slidedown {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(100%);
    }
}
.slidedown {
    animation: slidedown 0.3s linear ;
}
.slideup {
    animation: slideup 0.3s linear ;
}
@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}