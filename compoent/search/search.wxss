/* compoent/search/search.wxss */
.inner {
  flex-direction: row;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.search {
  display: inline-block;
  width: 100%;
  padding: 6rpx 20rpx;
  height: 36rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  background: #f5f5f8;
  font-size: 24rpx;
  position: relative;
}
.place-holder {
    color: #8d8d8d;
    font-size: 12px;
    text-align: center;
    padding-left: 30rpx;
   }
.search-bg {
  position:absolute;
  width:38rpx;
  height:40rpx;
  top:50%;
  left:50%;
  z-index:99;
  margin-left: -40rpx;
  /* margin-top: -3rpx; */
  transform: translate(-50%, -50%);

}