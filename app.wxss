/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.shopping {
  position: fixed;
  bottom: 0;
  font-size: 38rpx;
  color: #fff;
  background: #01c2c3;
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 999;
}
.mask{
 position: absolute;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 display: flex;
 justify-content: center;
 align-items: center;
 background-color: rgba(0,0,0,0.4);
 z-index: 9999;
}
@import "./template/template.wxss";