<!--pages/search/search.wxml-->
<view class='search-warp' style="height:100%">
  <view class='search-fixed'>
    <search value="{{searchText}}" placeholder="请输入商品名称和货号" bindsearch='search' focus="focus" bindwatch="watch" bindclear="clearInput"></search>
  </view>
  <!-- 没搜索字返回搜索内容 -->
  <view hidden="{{step !== 1}}"  class='search-content'>
    <view>
      <text class='hot-title'>热门搜索</text>
      <view class='hot'>
        <block wx:for="{{hotData}}" wx:key="{{index}}">
          <view class='cc'>
            <text>{{item}}</text>
          </view>
        </block>
      </view>
    </view>
    <view>
      <view class='history'>
        <text class='hot-title'>历史搜索</text>
        <image src='../../asset/icon-delete.png' mode='aspectFit' bindtap='clearHistory' wx:if="{{searchData.length > 0}}"></image>
      </view>
      <view class='hot'>
        <block wx:for="{{searchData}}" wx:key="{{index}}">
          <view class='cc'>
            <text>{{item}}</text>
          </view>
        </block>
      </view>
    </view>
  </view>
  <!-- 导航栏 -->
  <import src="../../template/nav.wxml"/>
  <view hidden="{{step !== 3}}"><template is="nav" data="{{navbar:navbar,currentTab:currentTab}}" /></view>
  <view hidden="{{step !== 3}}" class='item-content'>
    <import src="../../template/item.wxml"/>
        <scroll-view class="shop-content" scroll-top="{{scrollTop}}">
        <template is="row-2" data="{{array:array}}"/>
        </scroll-view>
  </view>
</view>
<!-- 弹窗 -->
<confirmBox show="{{showModal}}" height='20%' bindcancel="modalCancel" bindconfirm='modalConfirm'>
  <view class='modal-content'>
    <text>清空历史记录?</text>
  </view>
</confirmBox>