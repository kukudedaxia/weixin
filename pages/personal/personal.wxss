/* pages/personal/personal.wxss */
page {
  background: #f4f4f7;
  border-top: 1rpx solid #ededed;
}
.userinfo {
position: relative;
height: 200rpx;
color: #000;
background: #fff;
display: flex;
flex-direction: row;
align-items: center;
border-bottom: 1rpx solid #ededed;
}
.userinfo>image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  margin-top: -2rpx;
}
.userinfo-avatar {
overflow:hidden;
display: block;
width: 120rpx;
height: 120rpx;
margin: 20rpx;
border-radius: 50%;
border: 2px solid #fff;
box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userinfo-avatar>image {
  width: 100%;
  height: 100%;
}